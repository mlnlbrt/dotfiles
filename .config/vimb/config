# Homepage
set home-page=about:blank

# Downloads
set download-path=~/downloads

# UI
set smooth-scrolling=on
set hint-timeout=0

# Status bars
set input-autohide=true
set input-bg-normal=#002b36
set input-fg-normal=#839496
set status-color-bg=#002b36
set status-color-fg=#839496
set status-ssl-color-bg=#002b36
set status-ssl-color-fg=#839496

# Webkit
set html5-database=on
set html5-local-storage=on
set media-playback-requires-user-gesture=true

# JS
set javascript-can-access-clipboard=off
set javascript-can-open-windows-automatically=off

# Cookies
set cookie-accept=never

# Speed up
set proxy=off

# Search engines
shortcut-default go
shortcut-add go=https://encrypted.google.com/search?q=$0
shortcut-add te=https://translate.google.com/#pl/en/$0
shortcut-add tp=https://translate.google.com/#en/pl/$0
