!!!!!!!!!!!!!!
! Xft settings
!!!!!!!!!!!!!!
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

!!!!!!!!!!!!!!!!!!!!!
! URxvt configuration
!!!!!!!!!!!!!!!!!!!!!
URxvt.font: xft:DejavuSansMono:size=11
URxvt.letterSpace: -1
URxvt*scrollBar: false

! terminal colours
URxvt*foreground:#839496
URxvt*background:#002b36

URxvt*color0:   #073642
